{
  "manifest_version": 3,
  "name": "LinkedIn Job Scanner",
  "version": "1.0.0",
  "description": "Scan LinkedIn job listings and filter by keyword",
  "permissions": ["activeTab", "scripting", "storage", "downloads"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/jobs/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}

{
  "manifest_version": 3,
  "name": "LinkedIn Auto Connect",
  "version": "1.0",
  "description": "Automatically click Connect buttons on LinkedIn and handle send without note dialog",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["https://www.linkedin.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["content.js"]
    }
  ]
}
